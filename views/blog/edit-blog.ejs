<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../head %>
  </head>
  <body>
    <form action="/blog/<%= blog.id %>/edit-post" method="post">
      <input type="hidden" type="text" name="id" value="<%= blog.id %>" />
      <div class="row mt-5">
        <label class="col-md-3">Title</label>
        <input class="col-md-9" type="text" name="title" value="<%= blog.title %>" />
      </div>
      <div class="row mt-5">
        <label class="col-md-3">Content</label>
        <input class="col-md-9" type="text" name="content" value="<%= blog.content %>"/>
        <div class="col-md-9"></div>
        <button class="col-md-3 btn-danger" type="submit">Update</button>
      </div>
    </form>
  </body>
</html>
