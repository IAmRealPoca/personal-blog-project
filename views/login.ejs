<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ./head %>
    <title>Login</title>
  </head>
  <body>
    <form action="/login" method="post">
      <div class="row mt-5">
        <label class="col-md-3">Username</label>
        <input class="col-md-9" type="text" name="username" />
      </div>
      <div class="row mt-5">
        <label class="col-md-3">Password</label>
        <input class="col-md-9" type="password" name="password" />
        <button class="col-md-3 btn-danger" type="submit">Sign in</button>
      </div>
    </form>
  </body>
</html>
