<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../head %>
  </head>
  <body>
    <%- include ../header %>
    <div class="container">
      <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12 col-sm-9">
          <div class="jumbotron">
            <% users.forEach(function(user) { %>

            <h1><%= user.fullname %></h1>
            <p>Tuá»•i: <%= user.age %></p>
            <p>Role: <%= user.role %></p>
            <% if (currentUser) { if (currentUser.role === "ADMIN") { %>
            <div class="col">
              <a
                class="col-md-3 btn btn-info"
                href="/user/<%= user.id %>/edit-user"
                >Edit</a
              >
              <a
                class="col-md-3 btn btn-danger"
                href="/user/<%= user.id %>/delete-user"
                >Delete</a
              >
            </div>
            <% }}}); %>
          </div>
        </div>
      </div>
      <%- include ../footer%>
    </div>
  </body>
</html>
